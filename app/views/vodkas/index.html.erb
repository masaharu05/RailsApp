<p id="notice"><%= notice %></p>

<h1>Vodkas</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Memo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vodkas.each do |vodka| %>
      <tr>
        <td><%= vodka.name %></td>
        <td><%= vodka.memo %></td>
        <td><%= link_to 'Show', vodka %></td>
        <td><%= link_to 'Edit', edit_vodka_path(vodka) %></td>
        <td><%= link_to 'Destroy', vodka, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div><%= paginate @vodkas %>
</div>
<br>

